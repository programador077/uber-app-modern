{
  "name": "uber-app-modern",
  "version": "1.0.0",
  "description": "Modern Uber-like ride-sharing application with real-time tracking and payment integration",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "client": "cd client && npm start",
    "server": "cd server && npm start",
    "build": "cd client && npm run build",
    "test": "jest",
    "lint": "eslint .",
    "deploy": "npm run build && git push heroku main"
  },
  "keywords": ["ride-sharing", "uber", "maps", "real-time", "payment"],
  "author": "programador077",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  }
}
